<!-- File_page is designed using Bootstrap-->

<div class="container mt-5">
    <div class="row">
      <div class="col-12">
        <nav class="navbar navbar-expand-lg bg-dark text-white rounded-top p-3 border border-success">
          <div class="container-fluid">
            <h2>File - <%= fileData.file %></h2>
            <form class="d-flex" role="search">
              <input class="form-control me-2 border-info" type="text" id="search" placeholder="Search" aria-label="Search">
            </form>
          </div>
        </nav>
        <table class="table table-bordered table-striped rounded-bottom border-success">
            <thead>
                <tr>
                    <% fileData.header.forEach(function(cell,index){ %>
                    <th class="position-relative">
                      <span><%= cell %></span>
                      <span><button class="sort btn btn-light p-1 border border-0 position-absolute top-50 end-0 translate-middle" id="<%= index %>" data-order="desc"> â†“ </button></span>
                    </th>
                    <% }) %>
                </tr>
            </thead>

            <tbody>
              <% fileData.data.forEach(function(row) { %>
                  <tr>
                    <% Object.values(row).forEach(function(cell) { %>
                    <td><%= cell %></td>
                    <% }) %>
                  </tr>
                  <% }) %>
            </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <script src="/js/file_page.js"></script>

